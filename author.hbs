{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header --}}

{{!-- Everything inside the #author tags pulls data from the author --}}
{{#author}}

<div>
    <div id="main" class="box" style="margin-top: 0em;">
        <header>
            {{#if profile_image}}
                <span class="image avatar"><img src="{{img_url profile_image}}" /></span>
            {{/if}}
            <h2>{{ name }}</h2>
            <p>{{ bio }}</p>
            <div class="author-meta">
                <span v-if="location">
                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                    {{ location }}
                </span>
                <span v-if="website">
                    <i class="fa fa-link" aria-hidden="true"></i>
                    <a :href="website" target="_blank">{{ website }}</a>
                </span>
                <span>
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                    {{plural ../pagination.total empty='没有文章' singular='% 篇文章' plural='% 篇文章'}}
                </span>
            </div>
        </header>
    </div>
    {{/author}}
        <div class="row">
            <div class="col-12">
                {{> "loop"}}
            </div>
        </div>
</div>
{{#author}}
{{#if cover_image}}
<script type="text/javascript">
document.getElementById('script')
    .addEventListener('load', function() {
      $('#banner').css('background-image',"url('/assets/images/overlay.png'), url('{{img_url cover_image}}')")
    });
</script>
{{/if}}
{{/author}}