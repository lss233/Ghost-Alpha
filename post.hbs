{{!< default}}

{{#post}}
<div id="main" class="box" style="margin-top: 0em;">
	<header>
		<h2>{{ title }}</h2>
	</header>
	<div class="box">
		{{#if featured_image}}
			<span class="image featured"><img src="{{img_url featured_image}}" alt="title"/></span>
		{{/if}}
		{{content}}
	</div>
	<div class="comment">
		<div id="disqus_thread"></div>
		<script>
		var disqus_config = function () {
			this.page.url = "{{url}}";
			this.page.identifier = "{{comment_id}}";
		};
		(function() { // DON'T EDIT BELOW THIS LINE
		var d = document, s = d.createElement('script');
		s.src = 'https://lss233-blog.disqus.com/embed.js';
		s.setAttribute('data-timestamp', +new Date());
		(d.head || d.body).appendChild(s);
		})();
		</script>
		<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
		<script id="dsq-count-scr" src="//lss233-blog.disqus.com/count.js" async></script>
	</div>
</div>
{{/post}}